<Window x:Class="SalonNamestaja.UI.DodajIzmeniUslugu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalonNamestaja.UI"
        mc:Ignorable="d"
        Title="Dodavanje i izmena usluge" Height="300" Width="300">
    <Grid>
        <Button x:Name="btnSacuvaj" Content="Sacuvaj" HorizontalAlignment="Left" Margin="44,225,0,0" VerticalAlignment="Top" Width="75" Click="btnSacuvaj_Click"/>
        <Button x:Name="btnOtkazi" Content="Otkazi" HorizontalAlignment="Left" Margin="158,225,0,0" VerticalAlignment="Top" Width="75" Click="btnOtkazi_Click"/>
        <Label x:Name="lblNazivUsluge" Content="Naziv" HorizontalAlignment="Left" Margin="122,33,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="tbNazivUsluge" HorizontalAlignment="Left" Height="23" Margin="18,64,0,0" Text="{Binding Path=Naziv}" TextWrapping="Wrap" VerticalAlignment="Top" Width="253"/>
        <Label x:Name="lblCenaUsluge"  Content="Cena" HorizontalAlignment="Left" Margin="122,109,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="tbCenaUsluge" HorizontalAlignment="Left" Height="23" Margin="77,140,0,0" TextWrapping="Wrap" Text="{Binding Path=Cena}" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
